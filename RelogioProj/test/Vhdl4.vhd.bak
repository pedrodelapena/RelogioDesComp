LIBRARY ieee;
USE ieee.std_logic_1164.ALL;
use ieee.numeric_std.all;

entity pulsoSegundo is
	generic(
		ACCSIZE: natural := 26; --log(50000000)b2
		HALFFPGACLK: natural := 6 -- 25000000
	);
    port(
			clk: in std_logic;
			reset: in std_logic;
        
			clk_10sec: out std_logic;
			clk_min: out std_logic;
			clk_10min: out std_logic;
			clk_hour: out std_logic
        );
end entity;

architecture minuto of divisorSegundo is
	signal cnt: UNSIGNED(ACCSIZE-1 downto 0);
	signal cnt_clear: std_logic;
	
	function to_sl(condition : BOOLEAN) return STD_LOGIC is
	begin
		 if condition then
			  return '1';
		 else
			  return '0';
		 end if;
	end function;
		
begin
	
		
	
	process(clk, reset)
	begin
		if rising_edge(clk) then
			if reset= '1' then
				cnt <= (others => '0');
				clk_sec <= '0';
				cnt_clear<= '0';
			elsif(cnt_clear = '1') then
				cnt <= (others => '0');
				clk_sec <= clk_sec;
				cnt_clear <= '0';
			else
				cnt <= cnt + 1;
				clk_sec <= to_sl(cnt = HALFFPGACLK) XOR clk_sec;
				cnt_clear <= to_sl(cnt = HALFFPGACLK);
			end if;
			
		end if;

		
	end process;
end architecture;